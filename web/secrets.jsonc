{
	// Secrets configuration for web application
	// This file defines the secrets that need to be configured for this Cloudflare Pages project
	"secrets": [
		{
			"name": "SUPABASE_URL",
			"description": "Your Supabase project URL (e.g. https://your-project.supabase.co). Get it from Supabase Dashboard > Your Project > Settings > Configuration > Project URL",
			"required": true
		},
		{
			"name": "SUPABASE_ANON_KEY",
			"description": "Your Supabase project's anonymous API key. Get it from Supabase Dashboard > Your Project > Settings > Configuration > Project API keys > anon/public",
			"required": true
		},
		{
			"name": "SUPABASE_SERVICE_ROLE_KEY",
			"description": "Your Supabase project's service role API key (admin access). Get it from Supabase Dashboard > Your Project > Settings > Configuration > Project API keys > service_role",
			"required": true
		},
		{
			"name": "PUBLIC_POSTHOG_KEY",
			"description": "Your PostHog project API key for analytics. Get it from PostHog Dashboard > Your Project > Settings > Project API Key",
			"required": true
		},
		{
			"name": "OPENAI_API_KEY",
			"description": "Your OpenAI API key for AI features. Get it from OpenAI Platform > API keys > Create new secret key",
			"required": true
		},
		{
			"name": "STRIPE_SECRET_KEY",
			"description": "Your Stripe secret key for payment processing. Get it from Stripe Dashboard > Developers > API keys > Secret key",
			"required": true
		},
		{
			"name": "SUPABASE_AUTH_EMAIL_WEBHOOK_SECRET",
			"description": "Your Stripe webhook endpoint secret for verifying webhook signatures. Get it from Stripe Dashboard > Developers > Webhooks > Select your endpoint > Signing secret",
			"required": true
		},
		{
			"name": "AWS_ACCESS_KEY_ID",
			"description": "Your AWS access key ID for SES. Get it from AWS Console > IAM > Users > Select your user > Security credentials > Access key ID (Ensure it has the 'SendSES' policy)",
			"required": true
		},
		{
			"name": "AWS_SECRET_ACCESS_KEY",
			"description": "Your AWS secret access key for SES. Get it from AWS Console > IAM > Users > Select your user > Security credentials > Secret access key",
			"required": true
		}
	]
}
